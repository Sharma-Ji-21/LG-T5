<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
        <name>Earth at Night (NASA Black Marble)</name>
        <description>Global night lights imagery from NASA's Black Marble dataset</description>

        <GroundOverlay>
            <name>Diwali Kml</name>
            <Icon>
                <href>https://eoimages.gsfc.nasa.gov/images/imagerecords/144000/144898/BlackMarble_2016_01deg.jpg</href>
            </Icon>
            <LatLonBox>
                <north>90</north>
                <south>-90</south>
                <east>180</east>
                <west>-180</west>
            </LatLonBox>
            <color>ffffffff</color>
            <altitude>0</altitude>
            <altitudeMode>clampToGround</altitudeMode>
        </GroundOverlay>

        <!-- Optional style for better visibility -->
        <Style id="nightViewStyle">
            <BalloonStyle>
                <bgColor>ff000000</bgColor>
                <textColor>ffffffff</textColor>
            </BalloonStyle>
            <LabelStyle>
                <color>ffffffff</color>
            </LabelStyle>
        </Style>
    </Document>
</kml>